<%= form_tag '/top/signin', method: :post do %>
    <%= label_tag :uid, 'ユーザーID' %>
    <%= text_field_tag :uid %>
    <%= label_tag :password, 'パスワード' %>
    <%= password_field_tag :password %>
    <%= label_tag :password_confirmation, 'パスワード(確認)' %>
    <%= password_field_tag :password_confirmation %>
    <%= submit_tag '新規ユーザー作成' %>
<% end %>